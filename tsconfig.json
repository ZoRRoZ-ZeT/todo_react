{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist/",
    "lib": ["ES6", "DOM"],
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@type/*": ["./types/*"],
      "@apis/*": ["./api/*"],
      "@constants/*": ["./constants/*"],
      "@store/*": ["./store/*"],
      "@components/*": ["./components/*"],
      "@context/*": ["./context/*"],
      "@hooks/*": ["./hooks/*"]
    },
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": ["./dist/", "./webpack.config.js"]
}
