{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist/",
    "lib": ["ES6", "DOM"],
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["./dist/", "./webpack.config.js"]
}